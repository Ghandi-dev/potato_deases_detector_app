<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Diagnosis">


    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        android:layout_marginHorizontal="20dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        app:cardUseCompatPadding="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:padding="16dp">

            <ImageView
                android:id="@+id/diagnosisImageView"
                android:layout_width="118dp"
                android:layout_height="83dp"
                android:scaleType="fitCenter"
                android:src="@drawable/sehat"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/akurasiTextView"
                android:layout_width="wrap_content"
                android:layout_height="83dp"
                android:gravity="center_vertical"
                android:text="Akurasi : 100%"
                android:textColor="@color/light_green"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/diagnosisImageView"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/titleContentTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Content Title"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/light_green"
                app:layout_constraintTop_toBottomOf="@id/diagnosisImageView"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="15dp"
                android:gravity="start" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonDiagnosis"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/gradient_button_background"
                android:drawablePadding="0dp"
                android:gravity="center"
                android:paddingLeft="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/diagnosisImageView"
                android:drawableStart="@drawable/arrow" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>
</FrameLayout>
